{
  "name": "AI駆動手首・母指可動域リハビリテーションアプリ",
  "short_name": "RehabAI",
  "description": "MediaPipe Handsを使用したカメラベース可動域測定システム",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#007bff",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "ja",
  "dir": "ltr",
  "categories": ["health", "medical", "productivity"],
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/measurement-screen.png",
      "sizes": "640x1136",
      "type": "image/png",
      "platform": "narrow",
      "label": "測定画面"
    },
    {
      "src": "/screenshots/calendar-screen.png",
      "sizes": "640x1136",
      "type": "image/png",
      "platform": "narrow",
      "label": "カレンダー画面"
    },
    {
      "src": "/screenshots/dashboard-wide.png",
      "sizes": "1024x768",
      "type": "image/png",
      "platform": "wide",
      "label": "ダッシュボード"
    }
  ],
  "shortcuts": [
    {
      "name": "測定開始",
      "short_name": "測定",
      "description": "新しい可動域測定を開始",
      "url": "/measurement",
      "icons": [
        {
          "src": "/icons/shortcut-measurement.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "記録確認",
      "short_name": "記録",
      "description": "過去の記録を確認",
      "url": "/calendar",
      "icons": [
        {
          "src": "/icons/shortcut-calendar.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "data",
          "accept": ["application/json", "text/csv"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+rehab",
      "url": "/protocol-handler?data=%s"
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  }
}
